---
export interface Props {
  threshold?: number;
  bottom?: string;
  right?: string;
  label?: string;
}
const {
  threshold = 400,
  bottom = '1.25rem',
  right  = '1.25rem',
  label  = 'Volver arriba',
} = Astro.props;
---

<button
  data-totop
  data-threshold={String(threshold)}
  aria-label={label}
  class="fixed z-50 inline-flex h-12 w-12 items-center justify-center rounded-full bg-slate-900 text-white shadow-xl transition-all duration-200 hover:opacity-90 focus:outline-none focus:ring-4 focus:ring-slate-300 opacity-0 pointer-events-none"
  style={`bottom:${bottom}; right:${right};`}
>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 15l7-7 7 7" />
  </svg>
</button>
