---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Prices from '~/components/widgets/Pricing.astro';

import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Análisis de contexto para la seguridad perimetral y control de acceso',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Seguridad y planeación estratégica"
    title="Análisis de contexto para la seguridad perimetral y control de acceso"
    subtitle="Metodología ágil para evaluar entorno, amenazas y vulnerabilidades del sitio. Resulta en recomendaciones de perímetros, credenciales, flujos de entrada/salida y procedimientos operativos mínimos."
    actions={[
      { variant: 'primary', text: 'Solicitar análisis', href: getPermalink('https://wa.me/525549262639'), target: '_blank', icon: 'tabler:map-search' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1597423498219-04418210827d?auto=format&fit=crop&w=1674&q=80',
      alt: 'Análisis de contexto empresarial y residencial',
    }}
  />

  <!-- Cortesías — Análisis de Contexto ******************************** -->
  <Prices
    title="Cortesías — Análisis de Contexto"
    subtitle="Recursos gratuitos para iniciar la evaluación de tu entorno."
    prices={[
      {
        title: 'Diagnóstico inicial del entorno',
        subtitle: 'Cortesía para 1 sitio (empresa o fraccionamiento)',
        items: [
          { description: 'Checklist rápido de condiciones físicas y sociales' },
          { description: 'Mapa preliminar de riesgos y “zonas calientes”' },
          { description: 'Revisión de accesos, iluminación y visibilidad' },
          { description: 'Reporte ejecutivo con Top 5 acciones inmediatas' },
        ],
        callToAction: {
          target: '_self',
          text: 'Solicitar cortesía',
          href: '#contacto',
        },
        hasRibbon: true,
        ribbonTitle: 'gratis',
      },
      {
        title: 'Kit de prevención para la comunidad',
        subtitle: 'Material básico para difusión interna',
        items: [
          { description: 'Infografías de rutas seguras y conducta preventiva' },
          { description: 'Protocolo de visitante/contratista (plantilla)' },
          { description: 'Guía de denuncia y contactos clave locales' },
          { description: 'Checklist de seguridad personal y vecinal' },
        ],
        callToAction: {
          target: '_self',
          text: 'Descargar/solicitar',
          href: '#contacto',
        },
      },
      {
        title: 'Revisión técnica básica del perímetro',
        subtitle: 'Verificación inicial de CCTV, alarmas y accesos',
        items: [
          { description: 'Ángulos de cámara y puntos ciegos' },
          { description: 'Estado de luminarias y barreras perimetrales' },
          { description: 'Entradas/salidas y señalética operativa' },
          { description: 'Recomendaciones de control de acceso' },
        ],
        callToAction: {
          target: '_self',
          text: 'Quiero esta revisión',
          href: '#contacto',
        },
      },
    ]}
  />

  <CallToAction
    title="Decisiones basadas en datos reales"
    subtitle="Nuestros diagnósticos ayudan a prevenir incidentes, mejorar la seguridad y optimizar la gestión de recursos en entornos corporativos o residenciales."
    actions={[
      {
        variant: 'primary',
        text: 'Solicitar servicio',
        href: getPermalink('https://wa.me/525549262639'),
        target: '_blank',
        icon: 'tabler:clipboard-text',
      },
    ]}
  />
</Layout>
