---
import Layout from '~/layouts/LandingLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Análisis de contexto para empresas y fraccionamientos residenciales',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Seguridad y planeación estratégica"
    title="Análisis de contexto para empresas y fraccionamientos residenciales"
    subtitle="Evaluación integral del entorno físico, social y de seguridad para apoyar la toma de decisiones en organizaciones y desarrollos habitacionales. Incluye diagnóstico de riesgos y recomendaciones."
    actions={[
      { variant: 'primary', text: 'Solicitar análisis', href: '#', icon: 'tabler:map-search' },
      { text: 'Ver metodología', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1597423498219-04418210827d?auto=format&fit=crop&w=1674&q=80',
      alt: 'Análisis de contexto empresarial y residencial',
    }}
  />

  <CallToAction
    title="Decisiones basadas en datos reales"
    subtitle="Nuestros diagnósticos ayudan a prevenir incidentes, mejorar la seguridad y optimizar la gestión de recursos en entornos corporativos o residenciales."
    actions={[
      {
        variant: 'primary',
        text: 'Solicitar servicio',
        href: '#',
        icon: 'tabler:clipboard-text',
      },
    ]}
  />
</Layout>
