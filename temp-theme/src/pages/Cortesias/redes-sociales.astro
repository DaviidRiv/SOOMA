---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Prices from '~/components/widgets/Pricing.astro';

import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Riesgos en redes sociales',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Privacidad y reputación digital"
    title="Riesgos en redes sociales"
    subtitle="Explora las amenazas más comunes (suplantación, doxing, estafas, grooming) y buenas prácticas de privacidad. Te llevas configuraciones recomendadas y pautas de uso seguro para equipos y familias."
    actions={[
      { variant: 'primary', text: 'Invitar conferencia', href: getPermalink('https://wa.me/525549262639'), icon: 'tabler:shield-lock' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1597423498219-04418210827d?auto=format&fit=crop&w=1674&q=80',
      alt: 'Riesgos en redes sociales',
    }}
  />

  <!-- Cortesía: Redes Sociales ******************* -->
  <Prices
    title="Cortesías — Redes Sociales"
    subtitle="Asesoría gratuita para fortalecer perfiles personales y cuentas institucionales."
    prices={[
      {
        title: 'Diagnóstico de Redes Sociales',
        subtitle: 'Cortesía para 1-2 cuentas (persona o marca)',
        items: [
          { description: 'Revisión de privacidad y visibilidad por plataforma (FB/IG/TikTok/X)' },
          { description: 'Mapa de exposición: datos públicos y publicaciones sensibles' },
          { description: 'Checklist de endurecimiento y recuperación de cuenta' },
          { description: 'Reporte ejecutivo con hallazgos y prioridades' },
        ],
        callToAction: {
          target: '_self',
          text: 'Solicitar cortesía',
          href: '#contacto',
        },
        hasRibbon: true,
        ribbonTitle: 'gratis',
      },
      {
        title: 'Kit de Concientización en Redes',
        subtitle: 'Material básico para difusión interna',
        items: [
          { description: 'Guía rápida para evitar doxing y phishing en DMs' },
          { description: 'Plantillas de política interna de uso de redes' },
          { description: 'Pautas de contenido seguro para colaboradores/estudiantes' },
          { description: '10 recomendaciones de configuración por plataforma' },
        ],
        callToAction: {
          target: '_self',
          text: 'Descargar/solicitar',
          href: '#contacto',
        },
      },
      {
        title: 'Revisión de Seguridad de Cuentas',
        subtitle: 'Verificación técnica inicial',
        items: [
          { description: 'Activación/validación de MFA y gestión de contraseñas' },
          { description: 'Revisión de sesiones abiertas y apps conectadas' },
          { description: 'Comprobación de correos/teléfonos de recuperación' },
          { description: 'Sugerencias de roles y permisos para cuentas de equipo' },
        ],
        callToAction: {
          target: '_self',
          text: 'Quiero esta revisión',
          href: '#contacto',
        },
      },
    ]}
  />

  <CallToAction
    title="Conecta de forma segura"
    subtitle="Promovemos el uso responsable de las redes y el fortalecimiento de la autoestima digital en entornos educativos y laborales."
    actions={[
      {
        variant: 'primary',
        text: 'Agendar sesión',
        href: getPermalink('https://wa.me/525549262639'),
        target: '_blank',
        icon: 'tabler:message-circle',
      },
    ]}
  />

</Layout>
