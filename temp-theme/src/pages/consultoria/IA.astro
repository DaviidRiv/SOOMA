---
import Layout from '~/layouts/PageLayout.astro';
import ToTopButton from '~/components/common/ToTopButton.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import FAQs from '~/components/widgets/FAQs.astro';

import consultImage from '~/assets/images/consultoria/2.gif';

const metadata = { title: 'IA para Empresas, Negocios y Emprendedores' };
---

<Layout metadata={metadata}>
  <Hero2
    tagline="IA aplicada a resultados"
    actions={[
      { variant: 'primary', text: 'Solicitar diagnóstico', href:'https://wa.me/525549262639', target: '_blank'},
      { text: 'Especificaciones', href: '#servicios' },
    ]}
    image={{ src: consultImage, alt: 'Implementación de IA en empresas' }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Inteligencia Artificial</span><br />
      para Empresas y Emprendedores
    </Fragment>

    <Fragment slot="subtitle">
      Automatización, chatbots y analítica predictiva para reducir costos, acelerar procesos y mejorar CX.
    </Fragment>
  </Hero2>

  <Features
    id="servicios"
    title="¿Qué podemos implementar con IA?"
    subtitle="Casos reales, impacto medible y despliegues en semanas."
    columns={2}
    items={[
      { title: 'Automatización de procesos', description: 'RPA + IA en ventas, finanzas y soporte.', icon: 'tabler:robot' },
      { title: 'Chatbots y asistentes', description: 'Atención 24/7 en web/WhatsApp con handoff a agentes.', icon: 'tabler:message-chatbot' },
      { title: 'Analítica y predicción', description: 'Pronósticos de demanda, churn y riesgos.', icon: 'tabler:chart-line' },
      { title: 'Entrenamiento y adopción', description: 'Capacitación en prompts, buenas prácticas y gobierno de IA.', icon: 'tabler:school' },
    ]}
  />

  <Content
    title="Casos de uso"
    subtitle="Iniciativas de alto retorno con despliegue ágil."
    isReversed
    items={[
      { title: 'Soporte al cliente con IA', description: 'Chatbot con base de conocimiento y ticketing.' },
      { title: 'Forecast de ventas', description: 'Proyección de demanda por producto/sucursal.' },
    ]}
    image={{ src: '~/assets/images/consultoria/FLYER-SOOMA-CONSULTORIA.gif', alt: 'IA aplicada en operaciones' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        De pilotos a producción: <br /><span class="text-2xl">IA con impacto en el negocio</span>
      </h3>
    </Fragment>
  </Content>

  <FAQs
    title="Preguntas frecuentes"
    items={[
      { title: '¿Qué datos necesito para iniciar?', description: 'Podemos empezar con lo disponible y evolucionar datasets.', icon: 'tabler:database' },
      { title: '¿Cómo protegen mi información?', description: 'Privacidad, aislamiento de entornos y control de accesos.', icon: 'tabler:lock' },
      { title: '¿Cuánto tarda un proyecto?', description: 'Piloto funcional en 2–6 semanas (según integraciones).', icon: 'tabler:clock' },
      { title: '¿Se integra con mis sistemas?', description: 'Sí, via API/webhooks con CRM/ERP/Helpdesk.', icon: 'tabler:plug-connected' },
    ]}
  >
    <Fragment slot="bg"><div class="absolute inset-0 bg-indigo-50 dark:bg-transparent"></div></Fragment>
  </FAQs>

  <Steps2
    title="¿Listo para empezar con IA?"
    subtitle="Definimos un caso de uso, medimos impacto y escalamos."
    callToAction={{ text: 'Hablar con un consultor', href: 'https://wa.me/525549262639', target: '_blank' }}
    items={[
      {
        title: 'Correo',
        description: 'ventas@soomaconsultores.com.mx',
        icon: 'tabler:mail',
      },
      {
        title: 'Teléfono',
        description: '+55 (492) 62639',
        icon: 'tabler:phone',
      },
    ]}
  />


  <ToTopButton threshold={400} bottom="1.25rem" right="1.25rem" label="Volver arriba" />
</Layout>
