  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- CTA ******************************************* -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Solicitar propuesta',
        href: 'https://wa.me/525549262639',
        icon: 'tabler:file-description',
      },
    ]}
  >
    <Fragment slot="title">Construyamos una comunidad escolar segura</Fragment>

    <Fragment slot="subtitle">
      Te acompañamos con formación, protocolos y seguimiento para que cada estudiante aprenda y conviva en un entorno
      digital responsable.
    </Fragment>
