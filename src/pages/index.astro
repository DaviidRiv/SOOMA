---
import Base from "../layouts/Base.astro";
import NavbarMega from "../components/NavbarMega.jsx";
import Hero from "../components/Hero.jsx";
import ContactForm from "../components/ContactForm.jsx";
---

<Base title="Sooma Consultores">
  <NavbarMega client:load />

  <Hero client:load />

  <!-- Aquí podrías mostrar tarjetas de servicios destacados -->
  <section class="mx-auto max-w-7xl px-6 py-16">
    <h2 class="text-2xl font-bold text-[#0f3f66]">Soluciones clave</h2>
    <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <article class="rounded-xl border border-gray-100 p-5 shadow-sm">
        <h3 class="text-lg font-semibold">Diagnóstico integral de seguridad</h3>
        <p class="mt-2 text-sm text-gray-600">Evaluamos riesgos escolares, intramuros y laborales para priorizar acciones.</p>
      </article>
      <article class="rounded-xl border border-gray-100 p-5 shadow-sm">
        <h3 class="text-lg font-semibold">Capacitaciones a medida</h3>
        <p class="mt-2 text-sm text-gray-600">Programas técnicos, desarrollo humano y alta dirección.</p>
      </article>
      <article class="rounded-xl border border-gray-100 p-5 shadow-sm">
        <h3 class="text-lg font-semibold">Gestión de datos personales</h3>
        <p class="mt-2 text-sm text-gray-600">Cumplimiento y protocolos de respuesta ante incidentes.</p>
      </article>
    </div>
  </section>

  <ContactForm client:load />
</Base>
