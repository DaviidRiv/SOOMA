---
const { title = "Sooma Consultores" } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="es" class="min-h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="min-h-full bg-white text-gray-900 antialiased">
    <slot />
    <footer class="border-t border-gray-100 py-10 text-center text-sm text-gray-500">
      © {new Date().getFullYear()} Sooma Consultores — Todos los derechos reservados
    </footer>
  </body>
</html>
